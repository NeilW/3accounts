<% content_for :title, '3. Mark Periods' -%>
<% content_for :header, '3. Mark Periods' -%>

<% form_for @period, :url => periodic_period_path do |f| %>
  <table summary = "period form">
    <colgroup>
      <col class="labels">
      <col class="data">
    </colgroup>
    <tbody>
      <tr>
        <th>
          <label>Start At</label>
        </th>
        <td>
          <%= f.calendar_date_select :start_at %>
        </td>
      </tr>
      <tr>
        <th>
          <label>End At</label>
        </th>
        <td>
          <%= f.calendar_date_select :end_at %>
        </td>
      </tr>
      <tr class="buttons">
        <td colspan="2">
    <%= f.submit "Alter Period"%>
        </td>
      </tr>
    </tbody>
  </table>
<% end %>
  <ul class="navigation">
    <% if @journal.period -%>
      <li>
          <%=link_to "Remove period from journal", {:action => "destroy", :periodic_id => @journal}, :method => :delete %>
      </li>
    <% end -%>
    <li>
      <%= link_to 'Back', :back %>
    </li>
  </ul>
