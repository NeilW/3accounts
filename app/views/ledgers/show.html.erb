<% content_for :title, '2. Load Journals' -%>
<% content_for :header, '2. Load Journals' -%>

<table class="default">
  <thead>
    <tr>
      <th>Id</th>
      <th>Name</th>
      <th>Type</th>
      <th>Folio</th>
      <th>Account</th>
      <th>Amount</th>
    </tr>
  </thead>
  <tfoot>
  </tfoot>
  <tbody>
    <%- for fred in @ledger.journals -%>
    <%- journal_cycle = cycle("odd", "even") -%>
      <%- for jim in fred.transactions -%>
    <tr class="<%= journal_cycle %>">
      <td class="numeric"><%=h(fred.org_id)%></td>
      <td><%=h(fred.name).first(12)%></td>
      <td><%=h(fred.org_type).first(12)%></td>
      <td><%=h(fred.folio)%></td>
      <td><%=h(jim.account).first(12)%></td>
      <td class="numeric"><%=number_to_currency(jim.amount, :unit => "")%></td>
    </tr>
      <%-end-%>
    <%-end-%>
  </tbody>
</table>
