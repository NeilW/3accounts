<h1>New invoice</h1>

<%= error_messages_for :invoice %>

<% form_for(@invoice) do |f| %>
  <% field_set_tag do -%>
    <%= f.label :customer %>
    <%= f.text_field :customer %>
  <% end -%>
  <% field_set_tag do -%>
      <%= f.label :number %>
      <%= f.text_field :number %>
  <% end -%>
  <% field_set_tag do -%>
    <%= f.label :tax_point %>
    <%= f.date_select :tax_point %>
  <% end -%>
    <%= f.submit "Create" %>
<% end %>

<%= link_to 'Back', invoices_path %>
